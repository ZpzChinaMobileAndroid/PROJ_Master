<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 去掉activity跳转动画 -->
    <style name="Theme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>
    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    
    <!-- 登录页面跳转动画 -->
    <style name="LoginStyle" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/LoginAnimation</item>
    </style>
    <style name="LoginAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/login_in</item>
        <item name="android:activityOpenExitAnimation">@anim/login_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/login_in</item>
        <item name="android:activityCloseExitAnimation">@anim/login_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/login_in</item>
        <item name="android:taskOpenExitAnimation">@anim/login_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/login_in</item>
        <item name="android:taskCloseExitAnimation">@anim/login_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/login_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/login_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/login_in</item>
        <item name="android:taskToBackExitAnimation">@anim/login_out</item>
    </style>
            
    <!-- 底部导航 -->
    <style name="base_bottom_btn_style">
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 横线 -->
    <style name="view_line">
        <item name="android:background">@color/gray_txt_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
     <!-- 竖线 -->
    <style name="view_line_shu">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="view_line2">
        <item name="android:background">@color/gray_line2</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 编辑框样式 -->
    <style name="et_login_style">
        <item name="android:background">@drawable/login_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/activity_title_size</item>
        <item name="android:textColorHint">@color/gray_txt_hint</item>
    </style>
    
    <!-- 布局样式 -->
    <style name="layout_padding_style">
        <item name="android:paddingLeft">@dimen/padding_all</item>
        <item name="android:paddingRight">@dimen/padding_all</item>
        <item name="android:paddingTop">@dimen/padding_tb10</item>
        <item name="android:paddingBottom">@dimen/padding_tb10</item>
    </style>
    
    <!-- textview样式 -->
    <style name="tv_1_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- edittext样式 -->
    <style name="et_1_style">
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/gray_txt_hint</item>
        <item name="android:textSize">@dimen/activity_14_size</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">请填写</item>
    </style>
    
</resources>
