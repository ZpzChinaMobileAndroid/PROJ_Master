<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/backgroud">
    
	
    
    <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="0dp"
     android:orientation="horizontal"
     android:gravity="top"
     android:padding="15dp"
     android:layout_weight="1.5" >
        
      <ImageView 
       android:id="@+id/login_anonymity"
       android:layout_width="wrap_content"   
       android:layout_height="wrap_content"
       android:onClick="onClick"
       android:src="@drawable/login_anonymity"     />  
        
    </LinearLayout>
    
    
    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_gravity="center"
     android:orientation="vertical"
     android:layout_weight="1.5"
      >
        
     <ImageView 
       android:id="@+id/login_headline" 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/login_headline"  
         />   
       
        
    </LinearLayout>
    
    
      
    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_gravity="center"
     android:orientation="vertical"
     android:padding="20dp"
     android:layout_marginTop="10dp"
     android:layout_weight="2"
      >
       
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:ems="10"
            android:hint="请填写用户名"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:onClick="onClick"
            android:inputType="number"
            android:drawableLeft="@drawable/login_user"
            android:textSize="@dimen/activity_14_size" >

        </EditText>
        
     
     <EditText
            android:id="@+id/et_userpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:ems="10"
            android:hint="请填写密码"
            android:layout_marginTop="2dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:onClick="onClick"
            android:password="true"
            android:textSize="@dimen/activity_14_size" 
            android:drawableLeft="@drawable/login_password"
            >

        </EditText>
      
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="top"
        android:layout_weight="2.5">
        
        <Button 
         android:id="@+id/bt_landing"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="登\t陆"   
         android:textColor="@color/white"   
         android:onClick="onClick"
         android:background="@drawable/login_backgroud_selector"  />
        
        
         <Button 
         android:id="@+id/bt_register"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="注\t册"   
         android:textColor="@color/white"  
         android:onClick="onClick" 
         android:layout_marginTop="10dp"
         android:background="@drawable/login_register_backgroud"  />
        
    </LinearLayout>
    
    
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="horizontal"
       android:gravity="bottom"
       android:layout_weight="2"
       android:layout_marginBottom="20dp"
        >
        
       <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""   
        android:layout_weight="2"
       /> 
        <TextView 
        android:id="@+id/textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="忘记密码了么？"   
        android:textColor="#a1a9c9"
        android:layout_weight="3"
       /> 
        
        <TextView 
        android:id="@+id/tv_foundpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="找回密码"   
        android:onClick="onClick"
        android:textColor="@color/white"
        android:layout_weight="3"
       /> 
        
        <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""   
        android:layout_weight="1"
       /> 
        
    </LinearLayout>
    
</LinearLayout>

