<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_all" >
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_weight="1"
        >
        	
       <ImageView 
         android:id="@+id/iv_company_logo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/company_staff_name"
           
           /> 
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:paddingLeft="@dimen/padding_tb15"
        >
    
    
    <LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="top" 
        >
        
        <TextView 
            android:id="@+id/te_company_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textColor="@color/blue_bg"
            android:textSize="@dimen/activity_18_size"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        
        <TextView 
         android:id="@+id/tv_company_staff_department"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="textview"   
         android:textColor="@color/gray_txt_hint"
         android:textSize="@dimen/activity_16_size"
            
            />
             />
        <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text=":"   
            />
        <TextView 
         android:id="@+id/tv_company_staff_position"   
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="textview"   
         android:textColor="@color/gray_txt_hint"
         android:textSize="@dimen/activity_16_size"
            
            />
        
    </LinearLayout>
    
    </LinearLayout>
    

</LinearLayout>
