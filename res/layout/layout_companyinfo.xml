<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        style="@style/view_line"
        android:background="@color/gray_line" />

    <LinearLayout
        style="@style/layout_padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contacts_stage_companyinfo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司信息"
            android:textColor="@color/blue_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <LinearLayout
            style="@style/layout_padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView22"
                style="@style/tv_1_style"
                android:text="在职公司" />

            <EditText
                android:id="@+id/editText21"
                style="@style/et_1_style" >
            </EditText>
        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginLeft="@dimen/padding_tb10"
            android:layout_marginRight="@dimen/padding_tb10"
            android:background="@color/gray_line2" />

        <LinearLayout
            style="@style/layout_padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView12"
                style="@style/tv_1_style"
                android:text="职\t\t位" />

            <EditText
                android:id="@+id/editText11"
                style="@style/et_1_style" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>