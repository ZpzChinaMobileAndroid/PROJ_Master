<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhongji.master.android.phone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 登陆 -->
        <activity
            android:name="com.zhongji.master.android.phone.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册 -->
        <activity
            android:name="com.zhongji.master.android.phone.login.RegisterActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 找回密码 -->
        <activity
            android:name="com.zhongji.master.android.phone.login.FoundPasswordActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 用户条款 -->
        <activity
            android:name="com.zhongji.master.android.phone.login.UserClauseActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 人脉 -->
        <activity
            android:name="com.zhongji.master.android.phone.activity.contacts.ContactsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 项目 -->
        <activity
            android:name="com.zhongji.master.android.phone.activity.project.ProjectActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 公司 -->
        <activity
            android:name="com.zhongji.master.android.phone.activity.company.CompanyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 产品 -->
        <activity
            android:name="com.zhongji.master.android.phone.activity.product.ProductActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- 确认找回 -->
        <activity
            android:name="com.zhongji.master.android.phone.login.AffirmActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        
    </application>

</manifest>